                <%= image_tag 'flyershead.png',id: "flyershead" %>

                    <h1>2017 APPLICATION</h1>
                
                <p style="color:red"> <%= @rider.errors.full_messages if @rider.errors.any? %> </p>
                <%= form_for(@rider) do |f| %>
    <div class="field">
        <%= f.label :firstname,"First Name:" %>
        <%= text_field(:rider, :firstname, style:"width: 250px") %><br><br>
        <%= f.label :lastname, "Last Name" %>
        <%= text_field(:rider, :lastname, style:"width: 250px") %><br><br>
        <%= f.label :birthdate, "Birth Date" %>
        <%= date_field(:rider, :birthdate) %><br><br>
        <%= f.label :email %>
        <%= email_field(:rider, :email, style:"width: 250px") %><br><br>
        <%= f.label :phone %>
        <%= text_field(:rider, :phone) %><br><br>
        <%= f.label :address %>
        <%= text_field(:rider, :address, style:"width: 233px") %>
        <%= f.label :apt %>
        <%= text_field(:rider, :apt, style:"width: 100px") %><br><br>
        <%= f.label :city %>
        <%= text_field(:rider, :city, style:"width: 250px") %><br>
        <%= f.label :zip %>
        <%= text_field(:rider, :zip, style:"width: 100px") %><br><br>
        <%= f.label :school %>
        <%= text_field(:rider, :school) %><br><br>
        <%= f.label :feet, "Height: Feet" %>
        <%= number_field(:rider, :feet, in: 4..6) %>
        <%= f.label :inches %>
        <%= number_field(:rider, :inches, in: 0..11) %><br><br>
        <%= f.label :shirt_size, "T-shirt size" %>
        <%= f.radio_button(:shirt, "S") %>
            <%= label_tag(:shirt, "Small") %>
        <%= f.radio_button(:shirt, "M") %>
            <%= label_tag(:shirt, "Medium") %>
        <%= f.radio_button(:shirt, "L") %>
            <%= label_tag(:shirt, "Large") %>
        <%= f.radio_button(:shirt, "XL") %>
            <%= label_tag(:shirt, "X-Large") %><br><br>
        <%= f.label :Can_you_ride_a_bike? %>
        <%= f.radio_button(:ridebike, "Yes") %>
            <%= label_tag(:ridebike, "Yes, I Can Ride.") %>
        <%= f.radio_button(:ridebike, "No") %>
            <%= label_tag(:ridebike, "No, I Can't Ride.") %><br><br>

        <%= f.label :physical, "Do you currently take part in physical activities?" %> <br>
        <%= f.radio_button(:physical, "Yes") %>
            <%= label_tag(:physical, "Yes") %>
        <%= f.radio_button(:physical, "No") %>
            <%= label_tag(:physical, "No") %><br><br>
        <%= f.label :actdesc, "If yes, please describe:" %> <br>
        <%= text_area(:rider, :actdesc) %><br><br>
        <p>Please answer the following questions in 2 or 3 sentences:</p>
        <%= f.label :whyjoin, "Why are you interested in joining the Fearless Flyers?" %> <br>
        <%= text_area(:rider, :whyjoin) %><br><br>
        <%= f.label :bikeexp, "Briefly describe your experience riding bikes:" %> <br>
        <%= text_area(:rider, :bikeexp) %><br><br>
        <%= f.label :athexp, "Have you participated in an organized athletic group before?" %> <br>
        <%= text_area(:rider, :athexp) %><br><br>
        <%= f.label :goal, "Please describe one personal goal in joining the Fearless Flyers:" %> <br>
        <%= text_area(:rider, :goal) %><br><br>

        <br> <br>
       <%= f.submit "Submit", class:"button2" %>
    </div>
<% end %>

